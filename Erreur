#include<stdio.h>
#include<stdlib.h> //ajouté a Etape 4
#include<time.h> //ajouté a Etape 4

int main() {
    int C=1;
    while (C != 0){ //Etape 5
        printf("+-----------------------------------+\n"); //Etape 1
        printf("|1 : Addition                       |\n");
        printf("|2 : Soustraction                   |\n");
        printf("|3 : Multiplication                 |\n");
        printf("|4 : Tables des multiplications     |\n");
        printf("|5 : Divisions                      |\n");
        printf("|0 : Sortir du jeu                  |\n");
        printf("+-----------------------------------+\n");
        printf("Quel est votre choix ?\n"); //Etape 2
        scanf("%d", &C);
        switch (C) { //Etape 3 modifiée par Etape 6
            case 1:printf("-> Jeu sélectionné : Addition\n");break;
            case 2:printf("-> Jeu sélectionné : Soustraction\n");break;
            case 3:printf("-> Jeu sélectionné : Multiplication\n");break;
            case 4:printf("-> Jeu sélectionné : Tables des multiplications\n");break;
            case 5:printf("-> Jeu sélectionné : Divisions\n");break;
            case 0:printf("-> Jeu sélectionné : Sortir du jeu\n");break;
            default:printf("Le choix est invalide\n");
        }
        int a,b,d,somme,multiplication,soustraction,reponse,compteur,i,table,j,resultat,r; //Etape 4
        if (C==1){
            srand(time(NULL));
            int a = rand() %101;
            int b = rand() %101;
            somme = a+b;
            printf("Entrez le résultat de %d+%d :\n",a,b);
            scanf("%d",&reponse);
            if (reponse==somme){
                printf("Bravo\n");}
            else {
                printf("Dommage, la bonne reponse etait %d \n", somme);}
        compteur=compteur+1; //Etape 11
        }
        if (C==3){ //Etape 9
            srand(time(NULL));
            int a = rand() %11;
            int b = rand() %11;
            multiplication = a*b;
            printf("Entrez le résultat de %d*%d :\n",a,b);
            scanf("%d",&reponse);
            if (reponse==multiplication){
                printf("Bravo\n");}
            else {
                printf("Dommage, la bonne reponse etait %d \n", multiplication);}
        compteur=compteur+1; //Etape 11
        }
        if (C==2){ //Etape 10
            srand(time(NULL));
            int a = rand() %101;
            int b = rand() %101;
            if(a<b){
                d=a;
                a=b;
                b=d;}
            soustraction = a-b;
            printf("Entrez le résultat de %d-%d :\n",a,b);
            scanf("%d",&reponse);
            if (reponse==soustraction){
                printf("Bravo\n");}
            else {
                printf("Dommage, la bonne reponse etait %d \n", soustraction);}
        compteur=compteur+1; //Etape 11
        }
        if (C==4){ //Etape 12
            printf("Sur quelle table voulez vous travailler de 1 a 10 ? \n");
            scanf("%d", &table);
            for (int i=0; i<11; i++){
                reponse=i*table;
                printf("%d*%d=%d \n",i,table,reponse);}
            for (int j=0; j<11; j++){ //Etape 13
                resultat=j*table;
                printf("%d*%d = ? \n",table,j);
                scanf("%d",&r);
                if (r==resultat){
                    printf("Gagné ! \n");}
                else {
                    printf("Perdu :( \n");
                }
            }
        compteur=compteur+1; //Etape 11
        }
    printf("Votre nombre de point est : %d \n",compteur); // ajouté lors de Etape 11
    }
    if (C==0){ // ajouté lors de Etape 5
        printf("Merci de votre visite.\n");}
}
